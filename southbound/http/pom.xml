<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.sensinact.gateway.southbound</groupId>
    <artifactId>southbound</artifactId>
    <version>${revision}${changelist}</version>
  </parent>
  <groupId>org.eclipse.sensinact.gateway.southbound.http</groupId>
  <artifactId>http-parent</artifactId>
  <packaging>pom</packaging>

  <name>Southbound HTTP :: Parent</name>
  <description>Parent project of sensiNact southbound HTTP bundles</description>

  <modules>
    <module>http-device-factory</module>
    <module>http-callback-whiteboard</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>biz.aQute.bnd</groupId>
          <artifactId>bnd-run-maven-plugin</artifactId>
          <version>${bnd.version}</version>
          <configuration>
            <includeDependencyManagement>true</includeDependencyManagement>
            <bndrun>integration-test.bndrun</bndrun>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
