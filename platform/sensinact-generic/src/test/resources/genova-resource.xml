    <attributes>
    	<attribute name="value" type="float" modifiable="UPDATABLE">
    		<metadata>
			    <meta name="Unit" type="string" >
					<value>Degrees</value>
			   	</meta>
    		</metadata>
    	</attribute>
    </attributes>
  </resourceInfo>
