<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.sensinact.gateway.test</groupId>
    <artifactId>test</artifactId>
    <version>${revision}${changelist}</version>
  </parent>
  <artifactId>testcontainers.postgres</artifactId>
  <name>SensiNact Test :: Postgres Testcontainer</name>
  <description>OSGi packaging for the Postgres Test Container.</description>
  <!-- No integration tests -->
  <properties>
    <r2dbc.version>1.0.0.RELEASE</r2dbc.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.annotation</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>testcontainers.bundle</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.testcontainers</groupId>
      <artifactId>testcontainers-postgresql</artifactId>
      <version>${testcontainers.version}</version>
    </dependency>
    <dependency>
      <groupId>org.testcontainers</groupId>
      <artifactId>testcontainers-r2dbc</artifactId>
      <version>${testcontainers.version}</version>
    </dependency>
    <dependency>
      <groupId>io.r2dbc</groupId>
      <artifactId>r2dbc-spi</artifactId>
      <version>${r2dbc.version}</version>
    </dependency>

    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>42.7.9</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>biz.aQute.bnd</groupId>
        <artifactId>bnd-maven-plugin</artifactId>
        <executions>
          <execution>
            <!-- It is not possible to be a fragment of a fragment, so we must disable the default and use our own -->
            <id>bnd-process-tests</id>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <!-- It is not possible to be a fragment of a fragment, so we must disable the default and use our own -->
            <id>bnd-process-tests-custom</id>
            <phase>process-test-classes</phase>
            <goals>
              <goal>bnd-process-tests</goal>
            </goals>
            <configuration>
              <bnd>Bundle-SymbolicName: ${project.groupId}.${project.artifactId}-tests
                Git-Descriptor: ${system-allow-fail;git describe --dirty --always --abbrev=9}
                Git-SHA: ${system-allow-fail;git rev-list -1 --no-abbrev-commit HEAD}
                Test-Cases: ${classes;HIERARCHY_INDIRECTLY_ANNOTATED;org.junit.platform.commons.annotation.Testable;CONCRETE;NAMED;*.integration.*}</bnd>
                <artifactFragment>false</artifactFragment>
                <bndfile>tests.bnd</bndfile>
                <testCases>useTestCasesHeader</testCases>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>biz.aQute.bnd</groupId>
        <artifactId>bnd-resolver-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>biz.aQute.bnd</groupId>
        <artifactId>bnd-testing-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
