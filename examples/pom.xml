<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.sensinact.gateway</groupId>
    <artifactId>sensinact-parent</artifactId>
    <version>${revision}${changelist}</version>
  </parent>
  <groupId>org.eclipse.sensinact.gateway.examples</groupId>
  <artifactId>examples</artifactId>
  <packaging>pom</packaging>
  <name>Prototype examples</name>
  <description>This project contains example code demonstrating the use of various techniques for pushing data into sensiNact</description>

  <!-- No integration tests or deployment -->
  <properties>
    <bnd-tests.skip>true</bnd-tests.skip>
    <maven.deploy.skip>true</maven.deploy.skip>
  </properties>

  <modules>
    <module>pull-based</module>
    <module>push-based</module>
    <module>reflective</module>
    <module>model-based</module>
    <module>action</module>
    <module>writable</module>
    <module>generic</module>
    <module>notification</module>
  </modules>
</project>
